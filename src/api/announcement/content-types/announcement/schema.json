{
  "kind": "collectionType",
  "collectionName": "announcements",
  "info": {
    "singularName": "announcement",
    "pluralName": "announcements",
    "displayName": "Pengumuman"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "priority": {
      "type": "enumeration",
      "default": "Normal",
      "enum": [
        "Normal",
        "Penting",
        "Urgent"
      ]
    },
    "published": {
      "type": "datetime",
      "required": true
    },
    "expiryDate": {
      "type": "datetime"
    },
    "targetAudience": {
      "type": "enumeration",
      "default": "Semua",
      "enum": [
        "Semua",
        "Mahasiswa",
        "Dosen",
        "Staff",
        "Calon Mahasiswa"
      ]
    },
    "isPinned": {
      "type": "boolean",
      "default": false
    }
  }
}
